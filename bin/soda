#!/usr/bin/env python
"""
Example command-line script.
Run with --help for help menu.
"""
from argparse import ArgumentParser

from pydiner import Fountain

opt = ArgumentParser()
opt.description = "Stream FizzBuzz to STDOUT."
arg = opt.add_argument
arg("--fizz", type=int, default=3, help="int: fizz modulus")
arg("--buzz", type=int, default=5, help="int: buzz modulus")
arg("start", type=int, default=1, nargs="?", help="int: start index")
arg("stop", type=int, default=101, nargs="?", help="int: stop index")
arg("step", type=int, default=1, nargs="?", help="int: step size")
opt = opt.parse_args()

soda = Fountain(fizz=opt.fizz, buzz=opt.buzz)
vals = soda(opt.start, opt.stop, opt.step)
print(*vals, sep="\t", flush=True)
